@model Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.User.Username
        </dd>
        <dt class="col-sm-2">
            Menu Item
        </dt>
        <dd class="col-sm-10">
            @Model.MenuItem.Name
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
    </dl>
</div>
<div>

    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
