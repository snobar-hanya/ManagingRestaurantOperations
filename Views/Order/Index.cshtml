@model List<Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>MenuItem Name</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Username</td>
                <td>@item.MenuItem.Name</td>
                <td>@item.Quantity</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.OrderID">Details</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.OrderID">Edit</a>
                    <a class="btn btn-danger" asp-action="DeleteConfirmed" asp-route-id="@item.OrderID" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
