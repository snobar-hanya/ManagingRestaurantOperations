@model List<User>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-5">
    <h2>Users</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New User</a>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>UserID</th>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.UserID" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteConfirmed" asp-route-id="@user.UserID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
