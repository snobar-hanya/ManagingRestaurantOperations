@model List<MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<div class="container mt-5">
    <h2>Menu Items</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Item</a>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.MenuItemID" class="btn btn-warning btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.MenuItemID" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="DeleteConfirmed" asp-route-id="@item.MenuItemID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
